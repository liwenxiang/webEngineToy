import os, sys
Import('env')
env = env.Clone()

cpps = Glob("*.cpp")

lib = env.SharedLibrary(target = env["project_name"] + "_dom", 
        source = cpps)
env.Install(env["install_lib_root"], lib)

header_install_dir = [env["install_head_root"][0] + "/muduo/base/"]
env.Install(header_install_dir, Glob("*.h"))
